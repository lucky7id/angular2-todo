{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts",
        "./src/typings/browser.d.ts"
    ],
    "exclude": [
        "node_modules",
        "bower_components"
    ],
    "files": [
        "./src/main.ts",
        "./src/polyfills.ts",
        "./src/vendor.ts",
        "./typings/browser.d.ts",
        "./typings/main.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
